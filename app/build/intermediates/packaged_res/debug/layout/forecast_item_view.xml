<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forecast_item_view_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecast_day_of_week_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24"
android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Monday" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecast_date_tv"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/forecast_day_of_week_tv"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintStart_toStartOf="@+id/forecast_day_of_week_tv"
        app:layout_constraintTop_toBottomOf="@+id/forecast_day_of_week_tv"
        tools:text="07/04/22" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecast_time_tv"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toTopOf="@+id/forecast_temperature_tv"
        app:layout_constraintEnd_toEndOf="@+id/forecast_date_tv"
        app:layout_constraintStart_toStartOf="@+id/forecast_date_tv"
        app:layout_constraintTop_toBottomOf="@+id/forecast_date_tv"
        tools:text="15:00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecast_temperature_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_44"
        app:layout_constraintBottom_toTopOf="@+id/forecast_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecast_time_tv"
        tools:text="6" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecast_unit_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degree"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"

        app:layout_constraintStart_toEndOf="@+id/forecast_temperature_tv"
        app:layout_constraintTop_toTopOf="@+id/forecast_temperature_tv" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/forecast_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/forecast_main_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecast_temperature_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecast_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecast_iv"
        tools:text="Rain" />
</androidx.constraintlayout.widget.ConstraintLayout>